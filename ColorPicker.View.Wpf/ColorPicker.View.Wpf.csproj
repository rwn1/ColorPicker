<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

	<PropertyGroup>
		<TargetFrameworks>
			net462;
			net47;
			net471;
			net472;
			net48;
			net481;
			net6.0-windows7.0;
			net7.0-windows7.0;
			net8.0-windows7.0
		</TargetFrameworks>
		<UseWPF>true</UseWPF>
		<UseWindowsForms>true</UseWindowsForms>
		<PackageId>ColorPicker.View.Wpf</PackageId>
		<Version>1.0.4</Version>
		<Authors>rwn1</Authors>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Description>ColorPicker.View.Wpf provides a set of reusable WPF controls for color selection and visualization. It leverages ColorPicker.Core for all color logic and conversions, offering ready-to-use UI components such as color pickers, sliders, and color previews for Hex, RGB, HSL, HSV, and CMYK formats.</Description>
		<RepositoryUrl>https://github.com/rwn1/ColorPicker</RepositoryUrl>
		<PackageProjectUrl>https://github.com/rwn1/ColorPicker</PackageProjectUrl>
		<PackageTags>Color, ColorPicker</PackageTags>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>
	
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
  	<DebugType>embedded</DebugType>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
  	<DebugType>none</DebugType>
  </PropertyGroup>
	
  <ItemGroup>
    <None Remove="Resources\eyedropper.png" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ColorPicker.Core\ColorPicker.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="Themes\Generic.xaml">
      <Generator></Generator>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Page>
  </ItemGroup>
  


  <ItemGroup>
    <Resource Include="Resources\eyedropper.png" />
  </ItemGroup>

</Project>
