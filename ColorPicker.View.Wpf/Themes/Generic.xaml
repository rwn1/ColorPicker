<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ColorPicker.View.Wpf"
    xmlns:properties="clr-namespace:ColorPicker.Core.Properties;assembly=ColorPicker.Core">
    <Style TargetType="{x:Type local:ColorPicker}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ColorPicker}">
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="TextBox">
                                <Setter Property="AutomationProperties.HelpText" Value="Valid" />
                                <Style.Triggers>
                                    <Trigger Property="Validation.HasError" Value="True">
                                        <Setter Property="AutomationProperties.HelpText" Value="Error" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="26"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="26"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!--Brush for select-->
                        <Canvas x:Name="PART_ColorSelectionCanvas" Grid.RowSpan="7" />

                        <!--Hue with main brushes-->
                        <Canvas x:Name="PART_VerticalHueCanvas" Grid.Column="1" Grid.RowSpan="7" Margin="3,0"/>

                        <!--HEX-->
                        <Grid Grid.Column="2" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35" />
                                <ColumnDefinition Width="70" />
                            </Grid.ColumnDefinitions>

                            <Label x:Name="PART_HexLabel" />
                            <TextBox x:Name="PART_HexTextBox" Grid.Column="1" />
                        </Grid>

                        <!--RGB-->
                        <Grid Grid.Column="2" Grid.Row="1" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="26" />
                                <RowDefinition Height="26" />
                                <RowDefinition Height="26" />
                            </Grid.RowDefinitions>

                            <!--Red-->
                            <Label x:Name="PART_RedLabel" />
                            <TextBox x:Name="PART_RedTextBox" Grid.Column="1"/>
                            <Slider x:Name="PART_RedSlider" Grid.Column="2" />

                            <!--Green-->
                            <Label x:Name="PART_GreenLabel" Grid.Row="1" />
                            <TextBox x:Name="PART_GreenTextBox" Grid.Column="1" Grid.Row="1" />
                            <Slider x:Name="PART_GreenSlider" Grid.Column="2" Grid.Row="1" />

                            <!--Blue-->
                            <Label x:Name="PART_BlueLabel" Grid.Row="2" />
                            <TextBox x:Name="PART_BlueTextBox" Grid.Column="1" Grid.Row="2" />
                            <Slider x:Name="PART_BlueSlider"  Grid.Column="2" Grid.Row="2" />

                        </Grid>

                        <!--Alpha-->
                        <Grid Grid.Column="2" Grid.Row="2" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>

                            <!--Alpha-->
                            <Label x:Name="PART_AlphaLabel" Grid.Row="3" />
                            <TextBox x:Name="PART_AlphaTextBox" Grid.Column="1" Grid.Row="3" />
                            <Slider x:Name="PART_AlphaSlider" Grid.Column="2" Grid.Row="3" />
                        </Grid>
                        
                        <!--HSV-->
                        <Grid Grid.Column="2" Grid.Row="3" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="26" />
                                <RowDefinition Height="26" />
                                <RowDefinition Height="26" />
                            </Grid.RowDefinitions>

                            <!--Hue-->
                            <Label x:Name="PART_HueLabel" />
                            <TextBox x:Name="PART_HueTextBox" Grid.Column="1" />
                            <Slider x:Name="PART_HueSlider" Grid.Column="2" />

                            <!--Saturation-->
                            <Label x:Name="PART_SaturationLabel" Grid.Row="1" />
                            <TextBox x:Name="PART_SaturationTextBox" Grid.Column="1" Grid.Row="1" />
                            <Slider x:Name="PART_SaturationSlider" Grid.Column="2" Grid.Row="1" />

                            <!--Value-->
                            <Label x:Name="PART_ValueLabel" Grid.Row="2" />
                            <TextBox x:Name="PART_ValueTextBox" Grid.Column="1" Grid.Row="2" />
                            <Slider x:Name="PART_ValueSlider"  Grid.Column="2" Grid.Row="2" />

                        </Grid>

                        <!--HSL-->
                        <Grid Grid.Column="2" Grid.Row="4" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="26" />
                                <RowDefinition Height="26" />
                                <RowDefinition Height="26" />
                            </Grid.RowDefinitions>

                            <!--Hue-->
                            <Label x:Name="PART_HslHueLabel" />
                            <TextBox x:Name="PART_HslHueTextBox" Grid.Column="1" />
                            <Slider x:Name="PART_HslHueSlider" Grid.Column="2" />

                            <!--Saturation-->
                            <Label x:Name="PART_HslSaturationLabel" Grid.Row="1" />
                            <TextBox x:Name="PART_HslSaturationTextBox" Grid.Column="1" Grid.Row="1" />
                            <Slider x:Name="PART_HslSaturationSlider" Grid.Column="2" Grid.Row="1" />

                            <!--Lightness-->
                            <Label x:Name="PART_LightnessLabel" Grid.Row="2" />
                            <TextBox x:Name="PART_LightnessTextBox" Grid.Column="1" Grid.Row="2" />
                            <Slider x:Name="PART_LightnessSlider"  Grid.Column="2" Grid.Row="2" />

                        </Grid>

                        <!--CMYK-->
                        <Grid Grid.Column="2" Grid.Row="5" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="120" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="26" />
                                <RowDefinition Height="26" />
                                <RowDefinition Height="26" />
                                <RowDefinition Height="26" />
                            </Grid.RowDefinitions>

                            <!--Cyan-->
                            <Label x:Name="PART_CyanLabel" />
                            <TextBox x:Name="PART_CyanTextBox" Grid.Column="1" />
                            <Slider x:Name="PART_CyanSlider" Grid.Column="2" />

                            <!--Magenta-->
                            <Label x:Name="PART_MagentaLabel" Grid.Row="1" />
                            <TextBox x:Name="PART_MagentaTextBox" Grid.Column="1" Grid.Row="1" />
                            <Slider x:Name="PART_MagentaSlider" Grid.Column="2" Grid.Row="1" />

                            <!--Yellow-->
                            <Label x:Name="PART_YellowLabel" Grid.Row="2" />
                            <TextBox x:Name="PART_YellowTextBox" Grid.Column="1" Grid.Row="2" />
                            <Slider x:Name="PART_YellowSlider"  Grid.Column="2" Grid.Row="2" />

                            <!--Key-->
                            <Label x:Name="PART_KeyLabel" Grid.Row="3" />
                            <TextBox x:Name="PART_KeyTextBox" Grid.Column="1" Grid.Row="3" />
                            <Slider x:Name="PART_KeySlider"  Grid.Column="2" Grid.Row="3" />

                        </Grid>

                        <!--Hue with main brushes--><!--
                        <Canvas x:Name="PART_HorizontalHueCanvas" Grid.Row="7" Margin="0,3" />-->
                        
                        <!--Selected brush background-->
                        <Rectangle x:Name="PART_SelectedColorBackground" Margin="0,3" Grid.Row="7"/>

                        <!--Selected brush-->
                        <Rectangle x:Name="PART_SelectedColor" Margin="0,3" Grid.Row="7"/>

                        <!--Eye Dropper-->
                        <Button x:Name="PART_EyedropperButton" Grid.Column="1" Grid.Row="7" Margin="3" />

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>